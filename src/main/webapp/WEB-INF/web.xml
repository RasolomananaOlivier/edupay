<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <servlet>
        <description></description>
        <display-name>StudentController</display-name>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>com.edupay.controller.StudentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/students/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>PaymentController</display-name>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>com.edupay.controller.PaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/payments/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>MonthAmountController</display-name>
        <servlet-name>MonthAmountController</servlet-name>
        <servlet-class>com.edupay.controller.MonthAmountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MonthAmountController</servlet-name>
        <url-pattern>/amounts/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <description></description>
        <display-name>EquipmentAmountController</display-name>
        <servlet-name>EquipmentAmountController</servlet-name>
        <servlet-class>com.edupay.controller.EquipmentAmountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EquipmentAmountController</servlet-name>
        <url-pattern>/equipment-amounts/*</url-pattern>
    </servlet-mapping>
</web-app>